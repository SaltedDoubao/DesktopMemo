                                            <MenuItem Header="📋 粘贴(_P)" Command="ApplicationCommands.Paste" Foreground="#F0FFFFFF">
                                                <MenuItem.Icon>
                                                    <Path Data="M19,20H5V4H7V7H17V4H19M12,2A1,1 0 0,1 13,3A1,1 0 0,1 12,4A1,1 0 0,1 11,3A1,1 0 0,1 12,2M19,2H14.82C14.4,0.84 13.3,0 12,0C10.7,0 9.6,0.84 9.18,2H5A2,2 0 0,0 3,4V20A2,2 0 0,0 5,22H19A2,2 0 0,0 21,20V4A2,2 0 0,0 19,2Z" Fill="#FFFFFF" Width="12" Height="12" Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </MenuItem.Icon>
                                            </MenuItem>
                                        <Separator Background="#30FFFFFF"/>
                                            <MenuItem Header="✅ 全选(_A)" Command="ApplicationCommands.SelectAll" Foreground="#F0FFFFFF">
                                                <MenuItem.Icon>
                                                    <Path Data="M3,5H9V11H3V5M5,7V9H7V7H5M11,7H21V9H11V7M11,15H21V17H11V15M5,20V18H7V20H5M3,13H9V19H3V13M11,11H21V13H11V11Z" Fill="#FFFFFF" Width="12" Height="12" Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </MenuItem.Icon>
                                            </MenuItem>
                                        <Separator Background="#30FFFFFF"/>
                                            <MenuItem Header="🔍 查找(_F)" Click="FindMenuItem_Click" Foreground="#F0FFFFFF">
                                                <MenuItem.Icon>
                                                    <Path Data="M9.5,3A6.5,6.5 0 0,1 16,9.5C16,11.11 15.41,12.59 14.44,13.73L14.71,14H15.5L20.5,19L19,20.5L14,15.5V14.71L13.73,14.44C12.59,15.41 11.11,16 9.5,16A6.5,6.5 0 0,1 3,9.5A6.5,6.5 0 0,1 9.5,3M9.5,5C7,5 5,7 5,9.5C5,12 7,14 9.5,14C12,14 14,12 14,9.5C14,7 12,5 9.5,5Z" Fill="#FFFFFF" Width="12" Height="12" Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </MenuItem.Icon>
                                            </MenuItem>
                                            <MenuItem Header="🔄 替换(_R)" Click="ReplaceMenuItem_Click" Foreground="#F0FFFFFF">
                                                <MenuItem.Icon>
                                                    <Path Data="M11,6C12.38,6 13.63,6.56 14.54,7.46L12,10H18V4L15.95,6.05C14.68,4.78 12.93,4 11,4C7.47,4 4.57,6.61 4.08,10H6.1C6.56,7.72 8.58,6 11,6M16.64,15.14C17.3,14.24 17.76,13.17 17.92,12H15.9C15.44,14.28 13.42,16 11,16C9.62,16 8.37,15.44 7.46,14.54L10,12H4V18L6.05,15.95C7.32,17.22 9.07,18 11,18C14.53,18 17.43,15.39 17.92,12H19.92C19.76,13.83 19.16,15.54 18.14,16.95L16.64,15.14Z" Fill="#FFFFFF" Width="12" Height="12" Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </MenuItem.Icon>
                                            </MenuItem>
                                        </ContextMenu>
                                    </TextBox.ContextMenu>
                                <TextBox.Style>
                                    <Style TargetType="TextBox">
                                        <Style.Resources>
                                            <Style TargetType="ScrollBar">
                                                <Setter Property="Width" Value="8"/>
                                                <Setter Property="Background" Value="Transparent"/>
                                                <Setter Property="BorderThickness" Value="0"/>
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="ScrollBar">
                                                            <Border Background="Transparent" CornerRadius="4" Width="8">
                                                                <Track x:Name="PART_Track" IsDirectionReversed="True">
                                                                    <Track.Thumb>
                                                                        <Thumb>
                                                                            <Thumb.Style>
                                                                                <Style TargetType="Thumb">
                                                                                    <Setter Property="Background" Value="#3064B5F6"/>
                                                                                    <Setter Property="Template">
                                                                                        <Setter.Value>
                                                                                            <ControlTemplate TargetType="Thumb">
                                                                                                <Border Background="{TemplateBinding Background}" 
                                                                                                        CornerRadius="4" 
                                                                                                        Width="6"
                                                                                                        HorizontalAlignment="Center"/>
                                                                                            </ControlTemplate>
                                                                                        </Setter.Value>
                                                                                    </Setter>
                                                                                    <Style.Triggers>
                                                                                        <Trigger Property="IsMouseOver" Value="True">
                                                                                            <Setter Property="Background" Value="#5064B5F6"/>
                                                                                        </Trigger>
                                                                                        <Trigger Property="IsDragging" Value="True">
                                                                                            <Setter Property="Background" Value="#7064B5F6"/>
                                                                                        </Trigger>
                                                                                    </Style.Triggers>
                                                                                </Style>
                                                                            </Thumb.Style>
                                                                        </Thumb>
                                                                    </Track.Thumb>
                                                                </Track>
                                                            </Border>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                            </Style>
                                        </Style.Resources>
                                    </Style>
                                </TextBox.Style>
                            </TextBox>
                        </Grid>
                    </Grid>
                </Border>
            </Grid>

            <!-- 设置面板 - 覆盖层模式 -->
            <Border x:Name="SettingsPanel" 
                    HorizontalAlignment="Right"
                    VerticalAlignment="Stretch"
                    Width="320"
                    Background="#F0101010" 
                    BorderBrush="#30FFFFFF" 
                    BorderThickness="1,0,0,0" 
                    CornerRadius="0,16,16,0"
                    Visibility="Collapsed"
                    MouseLeftButtonDown="SettingsPanel_MouseLeftButtonDown">
                <Border.RenderTransform>
                    <TranslateTransform X="320"/>
                </Border.RenderTransform>
                <Border.Effect>
                    <DropShadowEffect Color="Black" BlurRadius="16" ShadowDepth="-4" Opacity="0.25"/>
                </Border.Effect>
                <ScrollViewer VerticalScrollBarVisibility="Auto" 
                              HorizontalScrollBarVisibility="Disabled"
                              Style="{StaticResource GlassScrollViewer}">
                    <StackPanel Margin="20">
                        <!-- 设置标题 -->
                        <Grid Margin="0,0,0,20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Grid.Column="0" Orientation="Horizontal">
                                <Ellipse Width="8" Height="8" Fill="#FF2196F3" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                <TextBlock Text="设置" FontSize="18" FontWeight="SemiBold" Foreground="#F5FFFFFF"/>
                            </StackPanel>
                            
                            <!-- 返回按钮 -->
                            <Button x:Name="SettingsBackButton"
                                    Grid.Column="1"
                                    Width="32" Height="32"
                                    Click="SettingsBackButton_Click"
                                    ToolTip="返回"
                                    Style="{StaticResource GlassButton}">
                                <Path Data="M20,11V13H8L13.5,18.5L12.08,19.92L4.16,12L12.08,4.08L13.5,5.5L8,11H20Z" 
                                      Fill="#E0FFFFFF" 
                                      Width="16" Height="16" 
                                      Stretch="Uniform"
                                      HorizontalAlignment="Center" 
                                      VerticalAlignment="Center"/>
                            </Button>
                        </Grid>

                        <!-- 置顶模式设置 -->
                        <Border Background="#20FFFFFF" CornerRadius="8" Padding="15" Margin="0,0,0,20">
                            <StackPanel>
                                <TextBlock Text="窗口置顶模式" FontSize="14" FontWeight="Medium" Foreground="#F0FFFFFF" Margin="0,0,0,12"/>
                                <StackPanel>
                                    <RadioButton x:Name="NormalModeRadio" Content="普通模式" GroupName="TopmostMode" 
                                                 Checked="TopmostModeRadio_Checked" Style="{StaticResource ModernRadioButton}"/>
                                    <RadioButton x:Name="DesktopModeRadio" Content="桌面置顶" GroupName="TopmostMode" 
                                                 Checked="TopmostModeRadio_Checked" Style="{StaticResource ModernRadioButton}"/>
                                    <RadioButton x:Name="AlwaysModeRadio" Content="总是置顶" GroupName="TopmostMode" 
                                                 Checked="TopmostModeRadio_Checked" Style="{StaticResource ModernRadioButton}"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>



                        <!-- 窗口位置设置 -->
                        <Border Background="#20FFFFFF" CornerRadius="8" Padding="15" Margin="0,0,0,20">
                            <StackPanel>
                                <TextBlock Text="窗口位置" FontSize="14" FontWeight="Medium" Foreground="#F0FFFFFF" Margin="0,0,0,12"/>
                                
                                <!-- 当前位置显示 -->
                                <Grid Margin="0,0,0,12">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="当前位置:" Foreground="#B0FFFFFF" FontSize="12" VerticalAlignment="Center"/>
                                    <TextBlock x:Name="CurrentPositionText" Grid.Column="1" Text="X: 0, Y: 0" Foreground="#E0FFFFFF" 
                                               FontSize="12" Margin="8,0,0,0" VerticalAlignment="Center"/>
                                </Grid>
                                
                                <!-- 预设位置 -->
                                <TextBlock Text="预设位置" FontSize="12" FontWeight="Medium" Foreground="#C0FFFFFF" Margin="0,0,0,8"/>
                                <Grid Margin="0,0,0,12">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    
                                    <Button x:Name="TopLeftBtn" Grid.Row="0" Grid.Column="0" Content="↖" 
                                            Width="30" Height="30" Margin="2" ToolTip="左上角"
                                            Click="PresetPosition_Click" Tag="TopLeft"
                                            Style="{StaticResource GlassButton}"/>
                                    <Button x:Name="TopCenterBtn" Grid.Row="0" Grid.Column="1" Content="↑" 
                                            Width="30" Height="30" Margin="2" ToolTip="顶部中央"
                                            Click="PresetPosition_Click" Tag="TopCenter"
                                            Style="{StaticResource GlassButton}"/>
                                    <Button x:Name="TopRightBtn" Grid.Row="0" Grid.Column="2" Content="↗" 
                                            Width="30" Height="30" Margin="2" ToolTip="右上角"
                                            Click="PresetPosition_Click" Tag="TopRight"
                                            Style="{StaticResource GlassButton}"/>
                                            
                                    <Button x:Name="MiddleLeftBtn" Grid.Row="1" Grid.Column="0" Content="←" 
                                            Width="30" Height="30" Margin="2" ToolTip="左侧中央"
                                            Click="PresetPosition_Click" Tag="MiddleLeft"
                                            Style="{StaticResource GlassButton}"/>
                                    <Button x:Name="CenterBtn" Grid.Row="1" Grid.Column="1" Content="●" 
                                            Width="30" Height="30" Margin="2" ToolTip="屏幕中央"
                                            Click="PresetPosition_Click" Tag="Center"
                                            Style="{StaticResource GlassButton}"/>
                                    <Button x:Name="MiddleRightBtn" Grid.Row="1" Grid.Column="2" Content="→" 
                                            Width="30" Height="30" Margin="2" ToolTip="右侧中央"
                                            Click="PresetPosition_Click" Tag="MiddleRight"
                                            Style="{StaticResource GlassButton}"/>
                                            
                                    <Button x:Name="BottomLeftBtn" Grid.Row="2" Grid.Column="0" Content="↙" 
                                            Width="30" Height="30" Margin="2" ToolTip="左下角"
                                            Click="PresetPosition_Click" Tag="BottomLeft"
                                            Style="{StaticResource GlassButton}"/>
                                    <Button x:Name="BottomCenterBtn" Grid.Row="2" Grid.Column="1" Content="↓" 
                                            Width="30" Height="30" Margin="2" ToolTip="底部中央"
                                            Click="PresetPosition_Click" Tag="BottomCenter"
                                            Style="{StaticResource GlassButton}"/>
                                    <Button x:Name="BottomRightBtn" Grid.Row="2" Grid.Column="2" Content="↘" 
                                            Width="30" Height="30" Margin="2" ToolTip="右下角"
                                            Click="PresetPosition_Click" Tag="BottomRight"
                                            Style="{StaticResource GlassButton}"/>
                                </Grid>
                                
                                <!-- 自定义位置输入 -->
                                <TextBlock Text="自定义位置" FontSize="12" FontWeight="Medium" Foreground="#C0FFFFFF" Margin="0,0,0,8"/>
                                <Grid Margin="0,0,0,12">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <TextBlock Grid.Column="0" Text="X:" Foreground="#B0FFFFFF" FontSize="12" 
                                               VerticalAlignment="Center" Margin="0,0,5,0"/>
                                    <TextBox x:Name="CustomXTextBox" Grid.Column="1" Text="0" 
                                             Background="#30FFFFFF" Foreground="#FFFFFFFF" BorderBrush="#50FFFFFF" 
                                             BorderThickness="1" Padding="4,2" Margin="0,0,8,0"
                                             PreviewTextInput="NumberOnly_PreviewTextInput"/>
                                             
                                    <TextBlock Grid.Column="2" Text="Y:" Foreground="#B0FFFFFF" FontSize="12" 
                                               VerticalAlignment="Center" Margin="0,0,5,0"/>
                                    <TextBox x:Name="CustomYTextBox" Grid.Column="3" Text="0" 
                                             Background="#30FFFFFF" Foreground="#FFFFFFFF" BorderBrush="#50FFFFFF" 
                                             BorderThickness="1" Padding="4,2" Margin="0,0,8,0"
                                             PreviewTextInput="NumberOnly_PreviewTextInput"/>
                                             
                                    <Button x:Name="ApplyCustomPositionBtn" Grid.Column="4" Content="应用" 
                                            Width="50" Height="25" Click="ApplyCustomPosition_Click"
                                            Style="{StaticResource GlassButton}"/>
                                </Grid>
                                

                                
                                <!-- 操作按钮 -->
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <Button x:Name="RememberPositionBtn" Grid.Column="0" Content="记住当前位置" 
                                            Height="30" Margin="0,0,4,0" Click="RememberPosition_Click"
                                            Style="{StaticResource GlassButton}"/>
                                    <Button x:Name="RestorePositionBtn" Grid.Column="1" Content="恢复保存位置" 
                                            Height="30" Margin="4,0,0,0" Click="RestorePosition_Click"
                                            Style="{StaticResource GlassButton}"/>
                                </Grid>
                            </StackPanel>
                        </Border>

                        <!-- 外观设置 -->
                        <Border Background="#20FFFFFF" CornerRadius="8" Padding="15" Margin="0,0,0,20">
                            <StackPanel>
                                <TextBlock Text="外观设置" FontSize="14" FontWeight="Medium" Foreground="#F0FFFFFF" Margin="0,0,0,12"/>
                                
                                <!-- 背景透明度设置 -->
                                <Grid Margin="0,0,0,12">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    
                                    <!-- 标题和数值显示 -->
                                    <Grid Grid.Row="0" Margin="0,0,0,8">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="背景透明度" Foreground="#E0FFFFFF" FontSize="12" VerticalAlignment="Center"/>
                                        <TextBlock x:Name="OpacityValueText" Grid.Column="1" Text="10%" Foreground="#B0FFFFFF" FontSize="12" VerticalAlignment="Center"/>
                                    </Grid>
                                    
                                    <!-- 滑块 -->
                                    <Slider x:Name="BackgroundOpacitySlider" 
                                            Grid.Row="1"
                                            Minimum="0" Maximum="100" 
                                            Value="10"
                                            TickFrequency="10"
                                            IsSnapToTickEnabled="False"
                                            Margin="0,0,0,8"
                                            ValueChanged="BackgroundOpacitySlider_ValueChanged">
                                        <Slider.Style>
                                            <Style TargetType="Slider">
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="Slider">
                                                            <Grid>
                                                                <!-- 背景轨道 -->
                                                                <Border x:Name="TrackBackground"
                                                                        Height="6"
                                                                        Background="#30FFFFFF"
                                                                        CornerRadius="3"
                                                                        VerticalAlignment="Center"
                                                                        MouseLeftButtonDown="OpacityTrack_MouseLeftButtonDown"/>
                                                                        
                                                                <!-- 进度条容器 -->
                                                                <Border Height="6"
                                                                        Background="Transparent"
                                                                        CornerRadius="3"
                                                                        VerticalAlignment="Center"
                                                                        ClipToBounds="True">
                                                                    <Rectangle x:Name="ProgressRect"
                                                                               Fill="#FF64B5F6"
                                                                               Height="6"
                                                                               HorizontalAlignment="Left"
                                                                               VerticalAlignment="Stretch"/>
                                                                </Border>
                                                                        
                                                                <Track x:Name="PART_Track">
                                                                    <Track.DecreaseRepeatButton>
                                                                        <RepeatButton Style="{x:Null}" Background="Transparent"/>
                                                                    </Track.DecreaseRepeatButton>
                                                                    <Track.IncreaseRepeatButton>
                                                                        <RepeatButton Style="{x:Null}" Background="Transparent"/>
                                                                    </Track.IncreaseRepeatButton>
                                                                    <Track.Thumb>
                                                                        <Thumb>
                                                                            <Thumb.Style>
                                                                                <Style TargetType="Thumb">
                                                                                    <Setter Property="Background" Value="#FFFFFFFF"/>
                                                                                    <Setter Property="Template">
                                                                                        <Setter.Value>
                                                                                            <ControlTemplate TargetType="Thumb">
                                                                                                <Ellipse Fill="{TemplateBinding Background}" 
                                                                                                         Width="14" Height="14"/>
                                                                                            </ControlTemplate>
                                                                                        </Setter.Value>
                                                                                    </Setter>
                                                                                </Style>
                                                                            </Thumb.Style>
                                                                        </Thumb>
                                                                    </Track.Thumb>
                                                                </Track>
                                                            </Grid>

                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                            </Style>
                                        </Slider.Style>
                                    </Slider>
                                    
                                    <!-- 说明文字 -->
                                    <TextBlock Grid.Row="2" Text="0% = 完全透明，100% = 60%白色背景" 
                                               Foreground="#80FFFFFF" FontSize="10" 
                                               HorizontalAlignment="Center"/>
                                </Grid>
                            </StackPanel>
                        </Border>

                        <!-- 其他选项 -->
                        <Border Background="#20FFFFFF" CornerRadius="8" Padding="15" Margin="0,0,0,20">
                            <StackPanel>
                                <TextBlock Text="其他选项" FontSize="14" FontWeight="Medium" Foreground="#F0FFFFFF" Margin="0,0,0,12"/>
                                <CheckBox x:Name="ClickThroughCheckBox" Content="穿透模式" Foreground="#E0FFFFFF" 
                                          Margin="0,6,0,12" Checked="ClickThroughCheckBox_Checked" Unchecked="ClickThroughCheckBox_Unchecked">
                                    <CheckBox.Style>
                                        <Style TargetType="CheckBox">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="CheckBox">
                                                        <StackPanel Orientation="Horizontal">
                                                            <Border x:Name="CheckMark" Width="16" Height="16" 
                                                                    Background="Transparent" 
                                                                    BorderBrush="#80FFFFFF" 
                                                                    BorderThickness="2" 
                                                                    CornerRadius="3" 
                                                                    Margin="0,0,8,0">
                                                                <Path x:Name="CheckPath" 
                                                                      Data="M3,8 L7,12 L13,4" 
                                                                      Stroke="#FFFFFFFF" 
                                                                      StrokeThickness="2.5" 
                                                                      StrokeStartLineCap="Round" 
                                                                      StrokeEndLineCap="Round" 
                                                                      Stretch="Uniform"
                                                                      HorizontalAlignment="Center"
                                                                      VerticalAlignment="Center"
                                                                      Visibility="Collapsed"/>
                                                            </Border>
                                                            <ContentPresenter VerticalAlignment="Center"/>
                                                        </StackPanel>
                                                        <ControlTemplate.Triggers>
                                                            <Trigger Property="IsChecked" Value="True">
                                                                <Setter TargetName="CheckMark" Property="Background" Value="#FF2196F3"/>
                                                                <Setter TargetName="CheckMark" Property="BorderBrush" Value="#FF2196F3"/>
                                                                <Setter TargetName="CheckPath" Property="Visibility" Value="Visible"/>
                                                            </Trigger>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter TargetName="CheckMark" Property="BorderBrush" Value="#FFFFFFFF"/>
                                                            </Trigger>
                                                        </ControlTemplate.Triggers>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </CheckBox.Style>
                                </CheckBox>
                                
                                <!-- 新增选项 -->
                                <CheckBox x:Name="AutoStartCheckBox" Content="开机自启动" Foreground="#E0FFFFFF" 
                                          Margin="0,6,0,12">
                                    <CheckBox.Style>
                                        <Style TargetType="CheckBox">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="CheckBox">
                                                        <StackPanel Orientation="Horizontal">
                                                            <Border x:Name="CheckMark" Width="16" Height="16" 
                                                                    Background="Transparent" 
                                                                    BorderBrush="#80FFFFFF" 
                                                                    BorderThickness="2" 
                                                                    CornerRadius="3" 
                                                                    Margin="0,0,8,0">
                                                                <Path x:Name="CheckPath" 
                                                                      Data="M3,8 L7,12 L13,4" 
                                                                      Stroke="#FFFFFFFF" 
                                                                      StrokeThickness="2.5" 
                                                                      StrokeStartLineCap="Round" 
                                                                      StrokeEndLineCap="Round" 
                                                                      Stretch="Uniform"
                                                                      HorizontalAlignment="Center"
                                                                      VerticalAlignment="Center"
                                                                      Visibility="Collapsed"/>
                                                            </Border>
                                                            <ContentPresenter VerticalAlignment="Center"/>
                                                        </StackPanel>
                                                        <ControlTemplate.Triggers>
                                                            <Trigger Property="IsChecked" Value="True">
                                                                <Setter TargetName="CheckMark" Property="Background" Value="#FF4CAF50"/>
                                                                <Setter TargetName="CheckMark" Property="BorderBrush" Value="#FF4CAF50"/>
                                                                <Setter TargetName="CheckPath" Property="Visibility" Value="Visible"/>
                                                            </Trigger>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter TargetName="CheckMark" Property="BorderBrush" Value="#FFFFFFFF"/>
                                                            </Trigger>
                                                        </ControlTemplate.Triggers>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </CheckBox.Style>
                                </CheckBox>
                            </StackPanel>
                        </Border>

                        <!-- 状态信息 -->
                        <Border Background="#20FFFFFF" CornerRadius="8" Padding="15">
                            <StackPanel>
                                <TextBlock Text="状态信息" FontSize="14" FontWeight="Medium" Foreground="#F0FFFFFF" Margin="0,0,0,12"/>
                                <StackPanel>
                                    <Grid Margin="0,6">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Ellipse Grid.Column="0" Width="6" Height="6" Fill="#FF4CAF50" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                        <TextBlock x:Name="StatusText" Grid.Column="1" Text="就绪" Foreground="#B0FFFFFF" FontSize="12"/>
                                    </Grid>
                                    <TextBlock x:Name="AppInfoText" Text="版本：1.2.1" Foreground="#90FFFFFF" FontSize="11" Margin="14,6,0,0"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>
    </Border>
</Window>
