                                                </ToggleButton>
                                                <ContentPresenter x:Name="ContentSite"
                                                                  IsHitTestVisible="False"
                                                                  Content="{TemplateBinding SelectionBoxItem}"
                                                                  ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                                                  ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                                                  Margin="10,0,30,0"
                                                                  VerticalAlignment="Center"
                                                                  HorizontalAlignment="Left"/>
                                                <Popup x:Name="Popup"
                                                       Placement="Bottom"
                                                       IsOpen="{TemplateBinding IsDropDownOpen}"
                                                       AllowsTransparency="True"
                                                       Focusable="False"
                                                       PopupAnimation="Slide">
                                                    <Border x:Name="DropDownBorder"
                                                            Background="#FF2A2A2A"
                                                            BorderBrush="#50FFFFFF"
                                                            BorderThickness="1"
                                                            CornerRadius="4"
                                                            MinWidth="{TemplateBinding ActualWidth}"
                                                            MaxHeight="{TemplateBinding MaxDropDownHeight}">
                                                        <ScrollViewer Margin="0" SnapsToDevicePixels="True">
                                                            <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Contained"/>
                                                        </ScrollViewer>
                                                    </Border>
                                                </Popup>
                                            </Grid>
                                        </ControlTemplate>
                                    </ComboBox.Template>
                                </ComboBox>
                            </StackPanel>
                        </Border>

                        <!-- 其他设置 -->
                        <Border Background="#20FFFFFF" CornerRadius="10" Padding="18,16" Margin="0,0,0,16">
                            <StackPanel>
                                <TextBlock Text="{Binding LocalizationService[Settings_Other_Title]}" FontSize="15" FontWeight="SemiBold" Foreground="#F0FFFFFF" Margin="0,0,0,14" />
                                <CheckBox Content="{Binding LocalizationService[Settings_ClickThrough]}" IsChecked="{Binding IsClickThroughEnabled, Mode=TwoWay}" Style="{StaticResource SettingsCheckBox}" Margin="0,0,0,10" />
                                <CheckBox Content="{Binding LocalizationService[Settings_AutoStart]}" IsChecked="{Binding IsAutoStartEnabled, Mode=TwoWay}" Style="{StaticResource SettingsCheckBox}" />
                            </StackPanel>
                        </Border>

                        <!-- 状态信息 -->
                        <Border Background="#20FFFFFF" CornerRadius="10" Padding="18,16" Margin="0,0,0,16">
                            <StackPanel>
                                <TextBlock Text="{Binding LocalizationService[Settings_Status_Title]}" FontSize="15" FontWeight="SemiBold" Foreground="#F0FFFFFF" Margin="0,0,0,14" />
                                <TextBlock Text="{Binding StatusText}" Foreground="#E0FFFFFF" FontSize="12" TextWrapping="Wrap" Margin="0,0,0,8" LineHeight="18"/>
                                <TextBlock Text="{Binding AppInfo}" Foreground="#B0FFFFFF" FontSize="11" TextWrapping="Wrap" LineHeight="16" />
                            </StackPanel>
                        </Border>

                        <!-- 导入导出 -->
                        <Border Background="#20FFFFFF" CornerRadius="10" Padding="18,16" Margin="0,0,0,16">
                            <StackPanel>
                                <TextBlock Text="{Binding LocalizationService[Settings_ImportExport_Title]}" FontSize="15" FontWeight="SemiBold" Foreground="#F0FFFFFF" Margin="0,0,0,14" />
                                <Button Content="{Binding LocalizationService[Settings_ImportLegacy]}" Command="{Binding ImportLegacyCommand}" Style="{StaticResource GlassButton}" Margin="0,0,0,10" Height="36" FontSize="13" />
                                <Button Content="{Binding LocalizationService[Settings_ExportMarkdown]}" Command="{Binding ExportMarkdownCommand}" Style="{StaticResource GlassButton}" Height="36" FontSize="13" />
                            </StackPanel>
                        </Border>

                        <!-- 保存设置按钮 -->
                        <Button Content="{Binding LocalizationService[Settings_SaveSettings]}" Command="{Binding PersistWindowSettingsCommand}" Style="{StaticResource GlassButton}" Height="40" HorizontalAlignment="Stretch" FontSize="14" FontWeight="SemiBold" />
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>
    </Border>
</Window>
