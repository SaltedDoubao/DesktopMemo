<Window x:Class="DesktopMemo.App.Views.ExitConfirmationDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:loc="clr-namespace:DesktopMemo.App.Localization"
        Title="退出确认"
        Height="220"
        Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">
    <Border Background="#FF2D2D30" CornerRadius="8" BorderBrush="#FF3E3E42" BorderThickness="1">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0"
                       Text="{Binding LocalizationService[Dialog_Exit_Title]}"
                       FontSize="16"
                       FontWeight="SemiBold"
                       Foreground="#F0FFFFFF"
                       Margin="0,0,0,15"/>

            <TextBlock Grid.Row="1"
                       Text="{Binding LocalizationService[Dialog_Exit_Message]}"
                       FontSize="13"
                       Foreground="#E0FFFFFF"
                       TextWrapping="Wrap"
                       VerticalAlignment="Center"/>

            <CheckBox Grid.Row="2"
                      x:Name="DontShowAgainCheckBox"
                      Content="{Binding LocalizationService[Dialog_Exit_DontShowAgain]}"
                      Foreground="#B0FFFFFF"
                      Margin="0,15,0,15"
                      VerticalAlignment="Center"/>

            <StackPanel Grid.Row="3"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right">
                <Button Content="{Binding LocalizationService[Dialog_Exit_Minimize]}"
                        Width="110"
                        Height="32"
                        Margin="0,0,10,0"
                        Click="MinimizeButton_Click"
                        Style="{StaticResource AccentButton}"/>
                <Button Content="{Binding LocalizationService[Dialog_Exit_Exit]}"
                        Width="80"
                        Height="32"
                        Margin="0,0,10,0"
                        Click="ExitButton_Click"
                        Style="{StaticResource SecondaryButton}"/>
                <Button Content="{Binding LocalizationService[Dialog_Exit_Cancel]}"
                        Width="60"
                        Height="32"
                        Click="CancelButton_Click"
                        Style="{StaticResource SecondaryButton}"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
