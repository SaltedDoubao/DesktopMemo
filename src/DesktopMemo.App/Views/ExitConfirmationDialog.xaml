<Window x:Class="DesktopMemo.App.Views.ExitConfirmationDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="退出确认"
        Height="220"
        Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">
    <Border Background="#FF2D2D30" CornerRadius="8" BorderBrush="#FF3E3E42" BorderThickness="1">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0"
                       Text="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=Title}"
                       FontSize="16"
                       FontWeight="SemiBold"
                       Foreground="#F0FFFFFF"
                       Margin="0,0,0,15"/>

            <TextBlock Grid.Row="1"
                       Text="是否最小化到托盘？"
                       FontSize="13"
                       Foreground="#E0FFFFFF"
                       TextWrapping="Wrap"
                       VerticalAlignment="Center"/>

            <CheckBox Grid.Row="2"
                      x:Name="DontShowAgainCheckBox"
                      Content="不再显示此确认"
                      Foreground="#B0FFFFFF"
                      Margin="0,15,0,15"
                      VerticalAlignment="Center"/>

            <StackPanel Grid.Row="3"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right">
                <Button Content="最小化到托盘"
                        Width="110"
                        Height="32"
                        Margin="0,0,10,0"
                        Click="MinimizeButton_Click"
                        Style="{StaticResource AccentButton}"/>
                <Button Content="完全退出"
                        Width="80"
                        Height="32"
                        Margin="0,0,10,0"
                        Click="ExitButton_Click"
                        Style="{StaticResource SecondaryButton}"/>
                <Button Content="取消"
                        Width="60"
                        Height="32"
                        Click="CancelButton_Click"
                        Style="{StaticResource SecondaryButton}"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
