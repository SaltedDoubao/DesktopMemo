<Window x:Class="DesktopMemo.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:conv="clr-namespace:DesktopMemo.App.Converters"
        mc:Ignorable="d"
        Title="备忘录"
        Width="380"
        Height="300"
        WindowStyle="None"
        ResizeMode="CanResizeWithGrip"
        AllowsTransparency="True"
        Background="Transparent"
        FontFamily="Segoe UI, Microsoft YaHei"
        FontSize="14"
        ShowInTaskbar="False"
        UseLayoutRounding="True"
        TextOptions.TextFormattingMode="Display"
        TextOptions.TextRenderingMode="ClearType"
        KeyDown="MainWindow_KeyDown">
    <Window.Resources>
        <conv:EnumToBooleanConverter x:Key="EnumToBooleanConverter" />
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter" />
        <conv:InverseBooleanToVisibilityConverter x:Key="InverseBoolToVisibilityConverter" />
        <!-- 玻璃拟态样式资源 -->
        <Style x:Key="GlassmorphismBorder" TargetType="Border">
            <Setter Property="Background">
                <Setter.Value>
                    <SolidColorBrush Color="#15FFFFFF" Opacity="0.1" />
                </Setter.Value>
            </Setter>
            <Setter Property="BorderBrush">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#40FFFFFF" Offset="0" />
                        <GradientStop Color="#10FFFFFF" Offset="1" />
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="CornerRadius" Value="16" />
        </Style>

        <!-- 半透明滚动条样式 -->
        <Style x:Key="TransparentScrollBar" TargetType="ScrollBar">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Width" Value="12" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ScrollBar">
                        <Grid>
                            <Border Background="Transparent" CornerRadius="6" Width="12">
                                <Track Name="PART_Track" IsDirectionReversed="True">
                                    <Track.Thumb>
                                        <Thumb>
                                            <Thumb.Style>
                                                <Style TargetType="Thumb">
                                                    <Setter Property="Background" Value="#30FFFFFF" />
                                                    <Setter Property="Template">
                                                        <Setter.Value>
                                                            <ControlTemplate TargetType="Thumb">
                                                                <Border Background="{TemplateBinding Background}"
                                                                        CornerRadius="6"
                                                                        Width="8"
                                                                        HorizontalAlignment="Center" />
                                                            </ControlTemplate>
                                                        </Setter.Value>
                                                    </Setter>
                                                    <Style.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Background" Value="#50FFFFFF" />
                                                        </Trigger>
                                                        <Trigger Property="IsDragging" Value="True">
                                                            <Setter Property="Background" Value="#70FFFFFF" />
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Thumb.Style>
                                        </Thumb>
                                    </Track.Thumb>
                                </Track>
                            </Border>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 带半透明滚动条的ScrollViewer样式 -->
        <Style x:Key="GlassScrollViewer" TargetType="ScrollViewer">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ScrollViewer">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <ScrollContentPresenter Grid.Row="0" Grid.Column="0" />

                            <ScrollBar Name="PART_VerticalScrollBar"
                                       Grid.Row="0" Grid.Column="1"
                                       Style="{StaticResource TransparentScrollBar}"
                                       Value="{TemplateBinding VerticalOffset}"
                                       Maximum="{TemplateBinding ScrollableHeight}"
                                       ViewportSize="{TemplateBinding ViewportHeight}"
                                       Visibility="{TemplateBinding VerticalScrollBarVisibility}" />

                            <ScrollBar Name="PART_HorizontalScrollBar"
                                       Grid.Row="1" Grid.Column="0"
                                       Orientation="Horizontal"
                                       Style="{StaticResource TransparentScrollBar}"
                                       Value="{TemplateBinding HorizontalOffset}"
                                       Maximum="{TemplateBinding ScrollableWidth}"
                                       ViewportSize="{TemplateBinding ViewportWidth}"
                                       Visibility="{TemplateBinding HorizontalScrollBarVisibility}" />
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 动画资源 - 优化流畅度 -->
        <Storyboard x:Key="FadeInAnimation">
            <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:0.35">
                <DoubleAnimation.EasingFunction>
                    <ExponentialEase EasingMode="EaseOut" Exponent="4" />
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>

        <Storyboard x:Key="SlideInAnimation">
            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)"
                             From="320" To="0" Duration="0:0:0.45">
                <DoubleAnimation.EasingFunction>
                    <ExponentialEase EasingMode="EaseOut" Exponent="5" />
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:0.35">
                <DoubleAnimation.EasingFunction>
                    <ExponentialEase EasingMode="EaseOut" Exponent="3" />
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>

        <Storyboard x:Key="SlideOutAnimation">
            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)"
                             From="0" To="320" Duration="0:0:0.25">
                <DoubleAnimation.EasingFunction>
                    <ExponentialEase EasingMode="EaseIn" Exponent="4" />
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation Storyboard.TargetProperty="Opacity" From="1" To="0" Duration="0:0:0.2">
                <DoubleAnimation.EasingFunction>
                    <ExponentialEase EasingMode="EaseIn" Exponent="3" />
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>

        <!-- 玻璃拟态按钮样式 -->
        <Style x:Key="GlassButton" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="#15FFFFFF"
                                CornerRadius="8"
                                BorderBrush="#25FFFFFF"
                                BorderThickness="1"
                                Padding="4">
                            <Border.Effect>
                                <DropShadowEffect Color="#000000" BlurRadius="8" ShadowDepth="2" Opacity="0.1" />
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#25FFFFFF" />
                                <Setter TargetName="border" Property="BorderBrush" Value="#40FFFFFF" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#35FFFFFF" />
                                <Setter TargetName="border" Property="BorderBrush" Value="#50FFFFFF" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ModernRadioButton" TargetType="RadioButton">
            <Setter Property="Foreground" Value="#E0FFFFFF" />
            <Setter Property="Margin" Value="0,4" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <StackPanel Orientation="Horizontal">
                            <Ellipse x:Name="RadioMark" Width="14" Height="14" Stroke="#80FFFFFF" StrokeThickness="2" Margin="0,0,8,0" />
                            <ContentPresenter VerticalAlignment="Center" />
                        </StackPanel>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="RadioMark" Property="Fill" Value="#FF2196F3" />
                                <Setter TargetName="RadioMark" Property="Stroke" Value="#FF2196F3" />
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="RadioMark" Property="Stroke" Value="#FFFFFFFF" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border x:Name="MainContainer" Style="{StaticResource GlassmorphismBorder}" Margin="8">
        <Border.Effect>
            <DropShadowEffect Color="#000000" BlurRadius="24" ShadowDepth="6" Opacity="0.15" />
        </Border.Effect>

        <Grid ClipToBounds="True">
            <Grid PreviewMouseLeftButtonDown="MainContentArea_PreviewMouseLeftButtonDown">
                <Grid.RowDefinitions>
                    <RowDefinition Height="44" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Border Grid.Row="0"
                        Background="#10FFFFFF"
                        CornerRadius="16,16,0,0"
                        BorderBrush="#15FFFFFF"
                        BorderThickness="0,0,0,1"
                        MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                    <Grid Margin="16,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                            <Ellipse Width="8" Height="8" Margin="0,0,10,0">
                                <Ellipse.Fill>
                                    <RadialGradientBrush>
                                        <GradientStop Color="#FF00E676" Offset="0" />
                                        <GradientStop Color="#FF4CAF50" Offset="1" />
                                    </RadialGradientBrush>
                                </Ellipse.Fill>
                            </Ellipse>

                            <StackPanel Orientation="Horizontal" Visibility="Visible">
                                <TextBlock Text="备忘录" Foreground="#F0FFFFFF" FontWeight="SemiBold" FontSize="14" VerticalAlignment="Center" />
                                <TextBlock Text="{Binding MemoCount, StringFormat=' ({0})'}" FontSize="12" Foreground="#B0FFFFFF" Margin="8,0,0,0" VerticalAlignment="Center" />
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Visibility="{Binding IsEditMode, Converter={StaticResource BoolToVisibilityConverter}}">
                                <TextBlock Text="编辑备忘录" Foreground="#F0FFFFFF" FontWeight="SemiBold" FontSize="14" VerticalAlignment="Center" />
                            </StackPanel>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                            <StackPanel Orientation="Horizontal" Visibility="{Binding IsEditMode, Converter={StaticResource InverseBoolToVisibilityConverter}}">
                                <Button Width="32" Height="32" Margin="0,0,8,0" Command="{Binding TogglePinCommand}" Style="{StaticResource GlassButton}" ToolTip="固定窗口">
                                    <Path Data="M16,12V4H17V2H7V4H8V12L6,14V16H11.2V22H12.8V16H18V14L16,12Z" Fill="#E0FFFFFF" Width="16" Height="16" Stretch="Uniform" />
                                </Button>
                                <Button Width="32" Height="32" Margin="0,0,8,0" Command="{Binding CreateMemoCommand}" Style="{StaticResource GlassButton}" ToolTip="新建备忘录">
                                    <Path Data="M19,13H13V19H11V13H5V11H11V5H13V11H19V13Z" Fill="#E0FFFFFF" Width="16" Height="16" Stretch="Uniform" />
                                </Button>
                                <Button Width="32" Height="32" Margin="0,0,8,0" Command="{Binding ToggleSettingsCommand}" Style="{StaticResource GlassButton}" ToolTip="设置">
                                    <Path Data="M12,8A4,4 0 0,1 16,12A4,4 0 0,1 12,16A4,4 0 0,1 8,12A4,4 0 0,1 12,8M12,10A2,2 0 0,0 10,12A2,2 0 0,0 12,14A2,2 0 0,0 14,12A2,2 0 0,0 12,10M10,22C9.75,22 9.54,21.82 9.5,21.58L9.13,18.93C8.5,18.68 7.96,18.34 7.44,17.94L4.95,18.95C4.73,19.03 4.46,18.95 4.34,18.73L2.34,15.27C2.22,15.05 2.27,14.78 2.46,14.63L4.57,12.97C4.53,12.65 4.5,12.33 4.5,12C4.5,11.67 4.53,11.34 4.57,11.03L2.46,9.37C2.27,9.22 2.22,8.95 2.34,8.73L4.34,5.27C4.46,5.05 4.73,4.96 4.95,5.05L7.44,6.05C7.96,5.66 8.5,5.32 9.13,5.07L9.5,2.42C9.54,2.18 9.75,2 10,2H14C14.25,2 14.46,2.18 14.5,2.42L14.87,5.07C15.5,5.32 16.04,5.66 16.56,6.05L19.05,5.05C19.27,4.96 19.54,5.05 19.66,5.27L21.66,8.73C21.78,8.95 21.73,9.22 21.54,9.37L19.43,11.03C19.47,11.34 19.5,11.66 19.5,12C19.5,12.34 19.47,12.65 19.43,12.97L21.54,14.63C21.73,14.78 21.78,15.05 21.66,15.27L19.66,18.73C19.54,18.95 19.27,19.04 19.05,18.95L16.56,17.95C16.04,18.34 15.5,18.68 14.87,18.93L14.5,21.58C14.46,21.82 14.25,22 14,22H10" Fill="#E0FFFFFF" Width="16" Height="16" Stretch="Uniform" />
                                </Button>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Visibility="{Binding IsEditMode, Converter={StaticResource BoolToVisibilityConverter}}">
                                <Button Width="32" Height="32" Margin="0,0,8,0" Command="{Binding BackToListCommand}" Style="{StaticResource GlassButton}" ToolTip="返回列表">
                                    <Path Data="M20,11V13H8L13.5,18.5L12.08,19.92L4.16,12L12.08,4.08L13.5,5.5L8,11H20Z" Fill="#E0FFFFFF" Width="16" Height="16" Stretch="Uniform" />
                                </Button>
                                <Button Width="32" Height="32" Margin="0,0,8,0" Command="{Binding SaveAndBackCommand}" Style="{StaticResource GlassButton}" ToolTip="保存并返回">
                                    <Path Data="M15,9H5V5H15M12,19A3,3 0 0,1 9,16A3,3 0 0,1 12,13A3,3 0 0,1 15,16A3,3 0 0,1 12,19M17,3H5C3.89,3 3,3.9 3,5V19A2,2 0 0,0 5,21H19A2,2 0 0,0 21,19V7L17,3Z" Fill="#E0FFFFFF" Width="16" Height="16" Stretch="Uniform" />
                                </Button>
                                <Button Width="32" Height="32" Margin="0,0,8,0" Command="{Binding DeleteMemoCommand}" Style="{StaticResource GlassButton}" ToolTip="删除备忘录">
                                    <Path Data="M19,4H15.5L14.5,3H9.5L8.5,4H5V6H19M6,19A2,2 0 0,0 8,21H16A2,2 0 0,0 18,19V7H6V19Z" Fill="#FFE57373" Width="16" Height="16" Stretch="Uniform" />
                                </Button>
                            </StackPanel>

                            <Button Width="32" Height="32" Click="CloseButton_Click" ToolTip="关闭" Style="{StaticResource GlassButton}">
                                <Path Data="M13.46,12L19,17.54V19H17.54L12,13.46L6.46,19H5V17.54L10.54,12L5,6.46V5H6.46L12,10.54L17.54,5H19V6.46L13.46,12Z" Fill="#FFE57373" Width="16" Height="16" Stretch="Uniform" />
                            </Button>
                        </StackPanel>
                    </Grid>
                </Border>

                <Border Grid.Row="1" Background="#08FFFFFF" CornerRadius="0,0,16,16" BorderBrush="#10FFFFFF" BorderThickness="0,1,0,0">
                    <Grid>
                        <Grid Visibility="{Binding IsEditMode, Converter={StaticResource InverseBoolToVisibilityConverter}}" Margin="8,0,0,0">
                            <ListBox ItemsSource="{Binding Memos}"
                                     SelectedItem="{Binding SelectedMemo}"
                                     Background="Transparent"
                                     BorderThickness="0"
                                     Padding="8,5,0,0"
                                     ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                     ScrollViewer.VerticalScrollBarVisibility="Visible"
                                     ScrollViewer.CanContentScroll="True"
                                     VirtualizingPanel.IsVirtualizing="True"
                                     VirtualizingPanel.VirtualizationMode="Recycling"
                                     VirtualizingPanel.ScrollUnit="Pixel">
                                <ListBox.Template>
                                    <ControlTemplate TargetType="ListBox">
                                        <ScrollViewer Style="{StaticResource GlassScrollViewer}"
                                                     Focusable="False"
                                                     Padding="{TemplateBinding Padding}">
                                            <ItemsPresenter />
                                        </ScrollViewer>
                                    </ControlTemplate>
                                </ListBox.Template>
                                <ListBox.ItemContainerStyle>
                                    <Style TargetType="ListBoxItem">
                                        <Setter Property="Padding" Value="0"/>
                                        <Setter Property="Margin" Value="0"/>
                                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                        <Setter Property="VerticalContentAlignment" Value="Top"/>
                                        <Setter Property="Background" Value="Transparent"/>
                                        <Setter Property="BorderBrush" Value="Transparent"/>
                                        <Setter Property="BorderThickness" Value="0"/>
                                        <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="ListBoxItem">
                                                    <ContentPresenter SnapsToDevicePixels="True"/>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </ListBox.ItemContainerStyle>
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Border CornerRadius="12" Padding="14" BorderBrush="#05FFFFFF" BorderThickness="1" Height="80" Margin="0,5" VerticalAlignment="Center">
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Setter Property="Background" Value="#08FFFFFF"/>
                                                    <Setter Property="BorderBrush" Value="#05FFFFFF"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsSelected, RelativeSource={RelativeSource AncestorType=ListBoxItem}}" Value="True">
                                                            <Setter Property="Background" Value="#25FFFFFF"/>
                                                            <Setter Property="BorderBrush" Value="#60FFFFFF"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                            <Border.Effect>
                                                <DropShadowEffect Color="#000000" BlurRadius="8" ShadowDepth="4" Opacity="0.1" />
                                            </Border.Effect>
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto" />
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="Auto" />
                                                </Grid.ColumnDefinitions>
                                                <StackPanel Grid.Column="0" Margin="0,0,12,0" VerticalAlignment="Center" Width="150">
                                                    <TextBlock Text="{Binding DisplayTitle}" Foreground="#F0FFFFFF" FontWeight="SemiBold" FontSize="14" TextTrimming="CharacterEllipsis"/>
                                                    <TextBlock Text="{Binding UpdatedAt, StringFormat='更新：{0:MM/dd HH:mm}'}" Foreground="#80FFFFFF" FontSize="11"/>
                                                </StackPanel>
                                                <TextBlock Grid.Column="1"
                                                           Text="{Binding Preview}"
                                                           Foreground="#B0FFFFFF"
                                                           FontSize="12"
                                                           TextWrapping="Wrap"
                                                           TextTrimming="CharacterEllipsis"
                                                           Margin="0,0,12,0"
                                                           VerticalAlignment="Center"/>
                                                <Button Grid.Column="2" VerticalAlignment="Center" Command="{Binding DataContext.EnterEditModeCommand, RelativeSource={RelativeSource AncestorType=ListBox}}" CommandParameter="{Binding}" Style="{StaticResource GlassButton}" Width="28" Height="28" ToolTip="编辑">
                                                    <Path Data="M3,17.25V21H6.75L17.81,9.94L14.06,6.19L3,17.25M20.71,7.04C21.1,6.65 21.1,6 20.71,5.62L18.37,3.28C17.98,2.89 17.33,2.89 16.95,3.28L15.12,5.11L18.87,8.86L20.71,7.04Z" Fill="#E0FFFFFF" Width="14" Height="14" Stretch="Uniform"/>
                                                </Button>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </Grid>

                        <Grid Visibility="{Binding IsEditMode, Converter={StaticResource BoolToVisibilityConverter}}">
                            <TextBox Text="{Binding EditorContent, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" AcceptsReturn="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" Background="Transparent" Foreground="#F0FFFFFF" BorderThickness="0" Padding="20" SpellCheck.IsEnabled="False" FontSize="14" CaretBrush="#FF64B5F6" SelectionBrush="#4064B5F6" TextChanged="NoteTextBox_TextChanged" PreviewKeyDown="NoteTextBox_PreviewKeyDown" />
                        </Grid>
                    </Grid>
                </Border>
            </Grid>

            <Border x:Name="SettingsPanel" HorizontalAlignment="Right" VerticalAlignment="Stretch" Width="320" Background="#F0101010" BorderBrush="#30FFFFFF" BorderThickness="1,0,0,0" CornerRadius="0,16,16,0" Visibility="{Binding IsSettingsPanelVisible, Converter={StaticResource BoolToVisibilityConverter}}" MouseLeftButtonDown="SettingsPanel_MouseLeftButtonDown">
                <Border.RenderTransform>
                    <TranslateTransform X="320" />
                </Border.RenderTransform>
                <Border.Effect>
                    <DropShadowEffect Color="Black" BlurRadius="16" ShadowDepth="-4" Opacity="0.25" />
                </Border.Effect>
                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Style="{StaticResource GlassScrollViewer}">
                    <StackPanel Margin="20">
                        <Grid Margin="0,0,0,20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0" Orientation="Horizontal">
                                <Ellipse Width="8" Height="8" Fill="#FF2196F3" VerticalAlignment="Center" Margin="0,0,10,0" />
                                <TextBlock Text="设置" FontSize="18" FontWeight="SemiBold" Foreground="#F5FFFFFF" />
                            </StackPanel>
                            <Button Grid.Column="1" Width="32" Height="32" Command="{Binding ToggleSettingsCommand}" Style="{StaticResource GlassButton}" ToolTip="返回">
                                <Path Data="M20,11V13H8L13.5,18.5L12.08,19.92L4.16,12L12.08,4.08L13.5,5.5L8,11H20Z" Fill="#E0FFFFFF" Width="16" Height="16" Stretch="Uniform" />
                            </Button>
                        </Grid>

                        <Border Background="#20FFFFFF" CornerRadius="8" Padding="15" Margin="0,0,0,20">
                            <StackPanel>
                                <TextBlock Text="窗口置顶模式" FontSize="14" FontWeight="Medium" Foreground="#F0FFFFFF" Margin="0,0,0,12" />
                                <RadioButton Content="普通模式" GroupName="TopmostMode" Style="{StaticResource ModernRadioButton}" IsChecked="{Binding SelectedTopmostMode, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=Normal}" />
                                <RadioButton Content="桌面置顶" GroupName="TopmostMode" Style="{StaticResource ModernRadioButton}" IsChecked="{Binding SelectedTopmostMode, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=Desktop}" />
                                <RadioButton Content="总是置顶" GroupName="TopmostMode" Style="{StaticResource ModernRadioButton}" IsChecked="{Binding SelectedTopmostMode, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=Always}" />
                            </StackPanel>
                        </Border>

                        <Border Background="#20FFFFFF" CornerRadius="8" Padding="15" Margin="0,0,0,20">
                            <StackPanel>
                                <TextBlock Text="窗口位置" FontSize="14" FontWeight="Medium" Foreground="#F0FFFFFF" Margin="0,0,0,12" />
                                <TextBlock Text="当前位置:" Foreground="#B0FFFFFF" FontSize="12" />
                                <TextBlock Text="{Binding CurrentLeft, StringFormat='X: {0:F0}'}" Foreground="#E0FFFFFF" FontSize="12" Margin="8,0,0,0" />
                                <TextBlock Text="{Binding CurrentTop, StringFormat='Y: {0:F0}'}" Foreground="#E0FFFFFF" FontSize="12" Margin="8,0,0,12" />

                                <UniformGrid Columns="3" Margin="0,0,0,12">
                                    <Button Content="↖" Command="{Binding MoveToPresetCommand}" CommandParameter="TopLeft" Style="{StaticResource GlassButton}" Margin="2" />
                                    <Button Content="↑" Command="{Binding MoveToPresetCommand}" CommandParameter="TopCenter" Style="{StaticResource GlassButton}" Margin="2" />
                                    <Button Content="↗" Command="{Binding MoveToPresetCommand}" CommandParameter="TopRight" Style="{StaticResource GlassButton}" Margin="2" />
                                    <Button Content="←" Command="{Binding MoveToPresetCommand}" CommandParameter="MiddleLeft" Style="{StaticResource GlassButton}" Margin="2" />
                                    <Button Content="●" Command="{Binding MoveToPresetCommand}" CommandParameter="Center" Style="{StaticResource GlassButton}" Margin="2" />
                                    <Button Content="→" Command="{Binding MoveToPresetCommand}" CommandParameter="MiddleRight" Style="{StaticResource GlassButton}" Margin="2" />
                                    <Button Content="↙" Command="{Binding MoveToPresetCommand}" CommandParameter="BottomLeft" Style="{StaticResource GlassButton}" Margin="2" />
                                    <Button Content="↓" Command="{Binding MoveToPresetCommand}" CommandParameter="BottomCenter" Style="{StaticResource GlassButton}" Margin="2" />
                                    <Button Content="↘" Command="{Binding MoveToPresetCommand}" CommandParameter="BottomRight" Style="{StaticResource GlassButton}" Margin="2" />
                                </UniformGrid>

                                <Grid Margin="0,0,0,12">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="X:" Foreground="#B0FFFFFF" FontSize="12" VerticalAlignment="Center" Margin="0,0,5,0" />
                                    <TextBox Grid.Column="1" Text="{Binding CustomPositionX}" Background="#30FFFFFF" Foreground="#FFFFFFFF" BorderBrush="#50FFFFFF" BorderThickness="1" Padding="4,2" Margin="0,0,8,0" />
                                    <TextBlock Grid.Column="2" Text="Y:" Foreground="#B0FFFFFF" FontSize="12" VerticalAlignment="Center" Margin="0,0,5,0" />
                                    <TextBox Grid.Column="3" Text="{Binding CustomPositionY}" Background="#30FFFFFF" Foreground="#FFFFFFFF" BorderBrush="#50FFFFFF" BorderThickness="1" Padding="4,2" Margin="0,0,8,0" />
                                    <Button Grid.Column="4" Content="应用" Command="{Binding ApplyCustomPositionCommand}" Style="{StaticResource GlassButton}" Width="50" Height="25" />
                                </Grid>

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <Button Content="记住当前位置" Command="{Binding RememberPositionCommand}" Style="{StaticResource GlassButton}" Grid.Column="0" Height="30" Margin="0,0,4,0" />
                                    <Button Content="恢复保存位置" Command="{Binding RestorePositionCommand}" Style="{StaticResource GlassButton}" Grid.Column="1" Height="30" Margin="4,0,0,0" />
                                </Grid>
                            </StackPanel>
                        </Border>

                        <Border Background="#20FFFFFF" CornerRadius="8" Padding="15" Margin="0,0,0,20">
                            <StackPanel>
                                <TextBlock Text="外观设置" FontSize="14" FontWeight="Medium" Foreground="#F0FFFFFF" Margin="0,0,0,12" />
                                <TextBlock Text="背景透明度" Foreground="#E0FFFFFF" FontSize="12" />
                                <TextBlock Text="{Binding BackgroundOpacity, StringFormat='当前：{0:P0}'}" Foreground="#B0FFFFFF" FontSize="12" Margin="0,4,0,8" />
                                <Slider Minimum="0.1" Maximum="1" Value="{Binding BackgroundOpacity, Mode=TwoWay}" />
                            </StackPanel>
                        </Border>

                        <Border Background="#20FFFFFF" CornerRadius="8" Padding="15" Margin="0,0,0,20">
                            <StackPanel>
                                <TextBlock Text="其他选项" FontSize="14" FontWeight="Medium" Foreground="#F0FFFFFF" Margin="0,0,0,12" />
                                <CheckBox Content="穿透模式" IsChecked="{Binding IsClickThroughEnabled, Mode=TwoWay}" Foreground="#E0FFFFFF" Margin="0,6,0,12" />
                            </StackPanel>
                        </Border>

                        <Border Background="#20FFFFFF" CornerRadius="8" Padding="15" Margin="0,0,0,20">
                            <StackPanel>
                                <TextBlock Text="托盘选项" FontSize="14" FontWeight="Medium" Foreground="#F0FFFFFF" Margin="0,0,0,12" />
                                <CheckBox Content="启用托盘图标" IsChecked="{Binding IsTrayEnabled, Mode=TwoWay}" Foreground="#E0FFFFFF" Margin="0,0,0,12" />
                                <Button Content="显示窗口" Command="{Binding TrayShowWindowCommand}" Style="{StaticResource GlassButton}" Margin="0,0,0,8" />
                                <Button Content="隐藏窗口" Command="{Binding TrayHideWindowCommand}" Style="{StaticResource GlassButton}" Margin="0,0,0,8" />
                                <Button Content="重启托盘图标" Command="{Binding TrayRestartCommand}" Style="{StaticResource GlassButton}" />
                            </StackPanel>
                        </Border>

                        <Border Background="#20FFFFFF" CornerRadius="8" Padding="15" Margin="0,0,0,20">
                            <StackPanel>
                                <TextBlock Text="查找 / 替换" FontSize="14" FontWeight="Medium" Foreground="#F0FFFFFF" Margin="0,0,0,12" />
                                <TextBlock Text="查找内容" Foreground="#B0FFFFFF" FontSize="12" />
                                <TextBox Text="{Binding SearchKeyword, Mode=TwoWay}" Margin="0,0,0,8" />
                                <TextBlock Text="替换为" Foreground="#B0FFFFFF" FontSize="12" />
                                <TextBox Text="{Binding ReplaceKeyword, Mode=TwoWay}" Margin="0,0,0,12" />
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                                    <CheckBox Content="区分大小写" IsChecked="{Binding IsCaseSensitive}" Foreground="#E0FFFFFF" Margin="0,0,12,0" />
                                    <CheckBox Content="使用正则" IsChecked="{Binding UseRegex}" Foreground="#E0FFFFFF" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <Button Content="查找" Command="{Binding FindNextCommand}" Style="{StaticResource GlassButton}" Margin="0,0,8,0" />
                                    <Button Content="全部替换" Command="{Binding ReplaceAllCommand}" Style="{StaticResource GlassButton}" />
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <Border Background="#20FFFFFF" CornerRadius="8" Padding="15" Margin="0,0,0,20">
                            <StackPanel>
                                <TextBlock Text="导入 / 导出" FontSize="14" FontWeight="Medium" Foreground="#F0FFFFFF" Margin="0,0,0,12" />
                                <Button Content="导入旧数据" Command="{Binding ImportLegacyCommand}" Style="{StaticResource GlassButton}" Margin="0,0,0,8" />
                                <Button Content="导出 Markdown" Command="{Binding ExportMarkdownCommand}" Style="{StaticResource GlassButton}" Margin="0,0,0,8" />
                            </StackPanel>
                        </Border>

                        <Button Content="保存设置" Command="{Binding PersistWindowSettingsCommand}" Style="{StaticResource GlassButton}" Height="32" HorizontalAlignment="Stretch" />
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>
    </Border>
</Window>
