<Window x:Class="DesktopMemo.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DesktopMemo.App"
        mc:Ignorable="d"
        Title="DesktopMemo"
        Width="380"
        Height="300"
        WindowStyle="None"
        ResizeMode="CanResizeWithGrip"
        AllowsTransparency="True"
        Background="Transparent"
        FontFamily="Segoe UI, Microsoft YaHei"
        FontSize="14"
        ShowInTaskbar="False"
        UseLayoutRounding="True"
        TextOptions.TextFormattingMode="Display"
        TextOptions.TextRenderingMode="ClearType"
        KeyDown="MainWindow_KeyDown">

    <Window.Resources>
        <!-- 玻璃拟态样式资源 -->
        <Style x:Key="GlassmorphismBorder" TargetType="Border">
            <Setter Property="Background">
                <Setter.Value>
                    <SolidColorBrush Color="#15FFFFFF" Opacity="0.1"/>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderBrush">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#40FFFFFF" Offset="0"/>
                        <GradientStop Color="#10FFFFFF" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="16"/>
        </Style>

        <!-- 玻璃拟态按钮样式 -->
        <Style x:Key="GlassButton" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="#15FFFFFF"
                                CornerRadius="8"
                                BorderBrush="#25FFFFFF"
                                BorderThickness="1"
                                Padding="4">
                            <Border.Effect>
                                <DropShadowEffect Color="#000000" BlurRadius="8" ShadowDepth="2" Opacity="0.1"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#25FFFFFF"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#40FFFFFF"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#35FFFFFF"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#50FFFFFF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 动画资源 -->
        <Storyboard x:Key="FadeInAnimation">
            <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:0.35">
                <DoubleAnimation.EasingFunction>
                    <ExponentialEase EasingMode="EaseOut" Exponent="4"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>
    </Window.Resources>

    <!-- 主容器 - 玻璃拟态风格 -->
    <Border x:Name="MainContainer" Style="{StaticResource GlassmorphismBorder}" Margin="8">

        <Border.Effect>
            <DropShadowEffect Color="#000000" BlurRadius="24" ShadowDepth="6" Opacity="0.15"/>
        </Border.Effect>

        <Grid ClipToBounds="True">
            <!-- 主内容区域 -->
            <Grid PreviewMouseLeftButtonDown="MainContentArea_PreviewMouseLeftButtonDown">
                <Grid.RowDefinitions>
                    <RowDefinition Height="44" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!-- 标题栏 -->
                <Border Grid.Row="0"
                        Background="#10FFFFFF"
                        CornerRadius="16,16,0,0"
                        BorderBrush="#15FFFFFF"
                        BorderThickness="0,0,0,1"
                        MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                    <Grid Margin="16,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <!-- 标题区域 -->
                        <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                            <Ellipse Width="8" Height="8" Margin="0,0,10,0">
                                <Ellipse.Fill>
                                    <RadialGradientBrush>
                                        <GradientStop Color="#FF00E676" Offset="0"/>
                                        <GradientStop Color="#FF4CAF50" Offset="1"/>
                                    </RadialGradientBrush>
                                </Ellipse.Fill>
                            </Ellipse>

                            <TextBlock Text="DesktopMemo"
                                       Foreground="#F0FFFFFF"
                                       FontWeight="SemiBold"
                                       FontSize="14"
                                       VerticalAlignment="Center"/>
                        </StackPanel>

                        <!-- 按钮区域 -->
                        <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                            <!-- 设置按钮 -->
                            <Button x:Name="SettingsToggle"
                                    Width="32" Height="32"
                                    Margin="0,0,8,0"
                                    Click="SettingsToggle_Click"
                                    ToolTip="设置"
                                    Style="{StaticResource GlassButton}">
                                <Path Data="M12,8A4,4 0 0,1 16,12A4,4 0 0,1 12,16A4,4 0 0,1 8,12A4,4 0 0,1 12,8M12,10A2,2 0 0,0 10,12A2,2 0 0,0 12,14A2,2 0 0,0 14,12A2,2 0 0,0 12,10M10,22C9.75,22 9.54,21.82 9.5,21.58L9.13,18.93C8.5,18.68 7.96,18.34 7.44,17.94L4.95,18.95C4.73,19.03 4.46,18.95 4.34,18.73L2.34,15.27C2.22,15.05 2.27,14.78 2.46,14.63L4.57,12.97C4.53,12.65 4.5,12.33 4.5,12C4.5,11.67 4.53,11.34 4.57,11.03L2.46,9.37C2.27,9.22 2.22,8.95 2.34,8.73L4.34,5.27C4.46,5.05 4.73,4.96 4.95,5.05L7.44,6.05C7.96,5.66 8.5,5.32 9.13,5.07L9.5,2.42C9.54,2.18 9.75,2 10,2H14C14.25,2 14.46,2.18 14.5,2.42L14.87,5.07C15.5,5.32 16.04,5.66 16.56,6.05L19.05,5.05C19.27,4.96 19.54,5.05 19.66,5.27L21.66,8.73C21.78,8.95 21.73,9.22 21.54,9.37L19.43,11.03C19.47,11.34 19.5,11.66 19.5,12C19.5,12.34 19.47,12.65 19.43,12.97L21.54,14.63C21.73,14.78 21.78,15.05 21.66,15.27L19.66,18.73C19.54,18.95 19.27,19.04 19.05,18.95L16.56,17.95C16.04,18.34 15.5,18.68 14.87,18.93L14.5,21.58C14.46,21.82 14.25,22 14,22H10M11.25,4L10.88,6.61C9.68,6.86 8.62,7.5 7.85,8.39L5.44,7.35L4.69,8.65L6.8,10.2C6.4,11.37 6.4,12.64 6.8,13.8L4.68,15.36L5.43,16.66L7.86,15.62C8.63,16.5 9.68,17.14 10.87,17.38L11.24,20H12.76L13.13,17.39C14.32,17.14 15.37,16.5 16.14,15.62L18.57,16.66L19.32,15.36L17.2,13.81C17.6,12.64 17.6,11.37 17.2,10.2L19.31,8.65L18.56,7.35L16.15,8.39C15.38,7.5 14.32,6.86 13.12,6.62L12.75,4H11.25Z"
                                      Fill="#E0FFFFFF"
                                      Width="16" Height="16"
                                      Stretch="Uniform"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                            </Button>

                            <!-- 关闭按钮 -->
                            <Button Width="32" Height="32"
                                    Click="CloseButton_Click"
                                    ToolTip="关闭"
                                    Style="{StaticResource GlassButton}">
                                <Path Data="M13.46,12L19,17.54V19H17.54L12,13.46L6.46,19H5V17.54L10.54,12L5,6.46V5H6.46L12,10.54L17.54,5H19V6.46L13.46,12Z"
                                      Fill="#FFE57373"
                                      Width="16" Height="16"
                                      Stretch="Uniform"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                            </Button>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- 主内容区 -->
                <Border Grid.Row="1"
                        Background="#08FFFFFF"
                        CornerRadius="0,0,16,16"
                        BorderBrush="#10FFFFFF"
                        BorderThickness="0,1,0,0"
                        Margin="0">
                    <!-- 编辑文本框 -->
                    <TextBox x:Name="NoteTextBox"
                             AcceptsReturn="True"
                             TextWrapping="Wrap"
                             VerticalScrollBarVisibility="Auto"
                             Background="Transparent"
                             Foreground="#F0FFFFFF"
                             BorderThickness="0"
                             Padding="20"
                             SpellCheck.IsEnabled="False"
                             FontSize="14"
                             CaretBrush="#FF64B5F6"
                             SelectionBrush="#4064B5F6"
                             TextChanged="NoteTextBox_TextChanged"
                             PreviewKeyDown="NoteTextBox_PreviewKeyDown"/>
                </Border>
            </Grid>

            <!-- 设置面板 - 覆盖层模式 -->
            <Border x:Name="SettingsPanel"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Stretch"
                    Width="320"
                    Background="#F0101010"
                    BorderBrush="#30FFFFFF"
                    BorderThickness="1,0,0,0"
                    CornerRadius="0,16,16,0"
                    Visibility="Collapsed"
                    MouseLeftButtonDown="SettingsPanel_MouseLeftButtonDown">
                <Border.RenderTransform>
                    <TranslateTransform X="320"/>
                </Border.RenderTransform>
                <Border.Effect>
                    <DropShadowEffect Color="Black" BlurRadius="16" ShadowDepth="-4" Opacity="0.25"/>
                </Border.Effect>

                <ScrollViewer VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Disabled">
                    <StackPanel Margin="20">
                        <!-- 设置标题 -->
                        <Grid Margin="0,0,0,20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Orientation="Horizontal">
                                <Ellipse Width="8" Height="8" Fill="#FF2196F3" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                <TextBlock Text="设置" FontSize="18" FontWeight="SemiBold" Foreground="#F5FFFFFF"/>
                            </StackPanel>

                            <!-- 返回按钮 -->
                            <Button x:Name="SettingsBackButton"
                                    Grid.Column="1"
                                    Width="32" Height="32"
                                    Click="SettingsBackButton_Click"
                                    ToolTip="返回"
                                    Style="{StaticResource GlassButton}">
                                <Path Data="M20,11V13H8L13.5,18.5L12.08,19.92L4.16,12L12.08,4.08L13.5,5.5L8,11H20Z"
                                      Fill="#E0FFFFFF"
                                      Width="16" Height="16"
                                      Stretch="Uniform"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                            </Button>
                        </Grid>

                        <!-- 状态信息 -->
                        <Border Background="#20FFFFFF" CornerRadius="8" Padding="15">
                            <StackPanel>
                                <TextBlock Text="状态信息" FontSize="14" FontWeight="Medium" Foreground="#F0FFFFFF" Margin="0,0,0,12"/>
                                <StackPanel>
                                    <Grid Margin="0,6">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Ellipse Grid.Column="0" Width="6" Height="6" Fill="#FF4CAF50" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                        <TextBlock x:Name="StatusText" Grid.Column="1" Text="就绪" Foreground="#B0FFFFFF" FontSize="12"/>
                                    </Grid>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>
    </Border>
</Window>
