<Window x:Class="DesktopMemo.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:conv="clr-namespace:DesktopMemo.App.Converters"
        xmlns:loc="clr-namespace:DesktopMemo.App.Localization"
        mc:Ignorable="d"
        Title="备忘录"
        Width="380"
        Height="300"
        WindowStyle="None"
        ResizeMode="CanResizeWithGrip"
        AllowsTransparency="True"
        Background="Transparent"
        FontFamily="Segoe UI, Microsoft YaHei"
        FontSize="14"
        ShowInTaskbar="False"
        UseLayoutRounding="True"
        TextOptions.TextFormattingMode="Display"
        TextOptions.TextRenderingMode="ClearType"
        KeyDown="MainWindow_KeyDown">
    <Window.Resources>
        <conv:EnumToBooleanConverter x:Key="EnumToBooleanConverter" />
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter" />
        <conv:InverseBooleanToVisibilityConverter x:Key="InverseBoolToVisibilityConverter" />
        <conv:CountToVisibilityConverter x:Key="CountToVisibilityConverter" />
        <!-- 玻璃拟态样式资源 -->
        <Style x:Key="GlassmorphismBorder" TargetType="Border">
            <Setter Property="Background">
                <Setter.Value>
                    <SolidColorBrush Color="#15FFFFFF" Opacity="0.1" />
                </Setter.Value>
            </Setter>
            <Setter Property="BorderBrush">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#40FFFFFF" Offset="0" />
                        <GradientStop Color="#10FFFFFF" Offset="1" />
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="CornerRadius" Value="16" />
        </Style>

        <!-- 半透明滚动条样式 -->
        <Style x:Key="TransparentScrollBar" TargetType="ScrollBar">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Width" Value="12" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ScrollBar">
                        <Grid>
                            <Border Background="Transparent" CornerRadius="6" Width="12">
                                <Track Name="PART_Track" IsDirectionReversed="True">
                                    <Track.Thumb>
                                        <Thumb>
                                            <Thumb.Style>
                                                <Style TargetType="Thumb">
                                                    <Setter Property="Background" Value="#30FFFFFF" />
                                                    <Setter Property="Template">
                                                        <Setter.Value>
                                                            <ControlTemplate TargetType="Thumb">
                                                                <Border Background="{TemplateBinding Background}"
                                                                        CornerRadius="6"
                                                                        Width="8"
                                                                        HorizontalAlignment="Center" />
                                                            </ControlTemplate>
                                                        </Setter.Value>
                                                    </Setter>
                                                    <Style.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Background" Value="#50FFFFFF" />
                                                        </Trigger>
                                                        <Trigger Property="IsDragging" Value="True">
                                                            <Setter Property="Background" Value="#70FFFFFF" />
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Thumb.Style>
                                        </Thumb>
                                    </Track.Thumb>
                                </Track>
                            </Border>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 带半透明滚动条的ScrollViewer样式 -->
        <Style x:Key="GlassScrollViewer" TargetType="ScrollViewer">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ScrollViewer">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <ScrollContentPresenter Grid.Row="0" Grid.Column="0" />

                            <ScrollBar Name="PART_VerticalScrollBar"
                                       Grid.Row="0" Grid.Column="1"
                                       Style="{StaticResource TransparentScrollBar}"
                                       Value="{TemplateBinding VerticalOffset}"
                                       Maximum="{TemplateBinding ScrollableHeight}"
                                       ViewportSize="{TemplateBinding ViewportHeight}"
                                       Visibility="{TemplateBinding VerticalScrollBarVisibility}" />

                            <ScrollBar Name="PART_HorizontalScrollBar"
                                       Grid.Row="1" Grid.Column="0"
                                       Orientation="Horizontal"
                                       Style="{StaticResource TransparentScrollBar}"
                                       Value="{TemplateBinding HorizontalOffset}"
                                       Maximum="{TemplateBinding ScrollableWidth}"
                                       ViewportSize="{TemplateBinding ViewportWidth}"
                                       Visibility="{TemplateBinding HorizontalScrollBarVisibility}" />
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 动画资源 - 优化流畅度 -->
        <Storyboard x:Key="FadeInAnimation">
            <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:0.35">
                <DoubleAnimation.EasingFunction>
                    <ExponentialEase EasingMode="EaseOut" Exponent="4" />
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>

        <Storyboard x:Key="SlideInAnimation">
            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)"
                             From="340" To="0" Duration="0:0:0.45">
                <DoubleAnimation.EasingFunction>
                    <ExponentialEase EasingMode="EaseOut" Exponent="5" />
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:0.35">
                <DoubleAnimation.EasingFunction>
                    <ExponentialEase EasingMode="EaseOut" Exponent="3" />
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>

        <Storyboard x:Key="SlideOutAnimation">
            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)"
                             From="0" To="340" Duration="0:0:0.25">
                <DoubleAnimation.EasingFunction>
                    <ExponentialEase EasingMode="EaseIn" Exponent="4" />
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation Storyboard.TargetProperty="Opacity" From="1" To="0" Duration="0:0:0.2">
                <DoubleAnimation.EasingFunction>
                    <ExponentialEase EasingMode="EaseIn" Exponent="3" />
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>

        <!-- 玻璃拟态按钮样式 -->
        <Style x:Key="GlassButton" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="#15FFFFFF"
                                CornerRadius="8"
                                BorderBrush="#25FFFFFF"
                                BorderThickness="1"
                                Padding="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#25FFFFFF" />
                                <Setter TargetName="border" Property="BorderBrush" Value="#40FFFFFF" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#35FFFFFF" />
                                <Setter TargetName="border" Property="BorderBrush" Value="#50FFFFFF" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="AccentButton" TargetType="Button">
            <Setter Property="Background" Value="#FF0078D4"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="4" Padding="12,6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF1A86D8"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#FF006AC1"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SecondaryButton" TargetType="Button">
            <Setter Property="Background" Value="#30FFFFFF"/>
            <Setter Property="Foreground" Value="#E0FFFFFF"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#40FFFFFF"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4"
                                Padding="12,6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#40FFFFFF"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#50FFFFFF"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ModernRadioButton" TargetType="RadioButton">
            <Setter Property="Foreground" Value="#E0FFFFFF" />
            <Setter Property="Margin" Value="0,0" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <StackPanel Orientation="Horizontal">
                            <Ellipse x:Name="RadioMark" Width="16" Height="16" Stroke="#80FFFFFF" StrokeThickness="2" Margin="0,0,10,0" VerticalAlignment="Center" />
                            <ContentPresenter VerticalAlignment="Center" />
                        </StackPanel>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="RadioMark" Property="Fill" Value="#FF2196F3" />
                                <Setter TargetName="RadioMark" Property="Stroke" Value="#FF2196F3" />
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="RadioMark" Property="Stroke" Value="#FFFFFFFF" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 设置面板复选框样式 -->
        <Style x:Key="SettingsCheckBox" TargetType="CheckBox">
            <Setter Property="Foreground" Value="#E0FFFFFF" />
            <Setter Property="FontSize" Value="13" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <StackPanel Orientation="Horizontal">
                            <Border x:Name="CheckBoxBorder" Width="18" Height="18" Background="Transparent" BorderBrush="#80FFFFFF" BorderThickness="2" CornerRadius="4" Margin="0,0,10,0" VerticalAlignment="Center">
                                <Path x:Name="CheckIcon"
                                      Data="M9,16.17L4.83,12L3.41,13.41L9,19L21,7L19.59,5.59L9,16.17Z"
                                      Fill="Transparent"
                                      Width="12"
                                      Height="12"
                                      Stretch="Uniform"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center" />
                            </Border>
                            <ContentPresenter VerticalAlignment="Center" />
                        </StackPanel>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="CheckBoxBorder" Property="Background" Value="#FF2196F3" />
                                <Setter TargetName="CheckBoxBorder" Property="BorderBrush" Value="#FF2196F3" />
                                <Setter TargetName="CheckIcon" Property="Fill" Value="#FFFFFFFF" />
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="CheckBoxBorder" Property="BorderBrush" Value="#FFFFFFFF" />
                            </Trigger>
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="IsMouseOver" Value="True" />
                                    <Condition Property="IsChecked" Value="False" />
                                </MultiTrigger.Conditions>
                                <Setter TargetName="CheckBoxBorder" Property="Background" Value="#15FFFFFF" />
                            </MultiTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 圆形复选框样式 (用于待办事项) -->
        <Style x:Key="RoundCheckBox" TargetType="CheckBox">
            <Setter Property="Foreground" Value="#E0FFFFFF" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <Grid Background="Transparent">
                            <Ellipse x:Name="CheckMark" 
                                     Width="20" 
                                     Height="20" 
                                     Stroke="#80FFFFFF" 
                                     StrokeThickness="2" 
                                     Fill="Transparent" />
                            <Path x:Name="CheckIcon"
                                  Data="M9,16.17L4.83,12L3.41,13.41L9,19L21,7L19.59,5.59L9,16.17Z"
                                  Fill="Transparent"
                                  Width="12"
                                  Height="12"
                                  Stretch="Uniform"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center" />
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="CheckMark" Property="Fill" Value="#FF9E9E9E" />
                                <Setter TargetName="CheckMark" Property="Stroke" Value="#FF9E9E9E" />
                                <Setter TargetName="CheckIcon" Property="Fill" Value="#FFFFFFFF" />
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="CheckMark" Property="Stroke" Value="#FFFFFFFF" />
                            </Trigger>
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="IsMouseOver" Value="True" />
                                    <Condition Property="IsChecked" Value="False" />
                                </MultiTrigger.Conditions>
                                <Setter TargetName="CheckMark" Property="Fill" Value="#15FFFFFF" />
                            </MultiTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border x:Name="MainContainer" Style="{StaticResource GlassmorphismBorder}" Margin="0">

        <Grid ClipToBounds="True">
            <Grid PreviewMouseLeftButtonDown="MainContentArea_PreviewMouseLeftButtonDown">
                <Grid.RowDefinitions>
                    <RowDefinition Height="44" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Border Grid.Row="0"
                        Background="#10FFFFFF"
                        CornerRadius="16,16,0,0"
                        BorderBrush="#15FFFFFF"
                        BorderThickness="0,0,0,1"
                        MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                    <Grid Margin="16,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                            <Ellipse Width="8" Height="8" Margin="0,0,10,0">
                                <Ellipse.Fill>
                                    <RadialGradientBrush>
                                        <GradientStop Color="#FF00E676" Offset="0" />
                                        <GradientStop Color="#FF4CAF50" Offset="1" />
                                    </RadialGradientBrush>
                                </Ellipse.Fill>
                            </Ellipse>

                            <StackPanel Orientation="Horizontal" Visibility="{Binding IsEditMode, Converter={StaticResource InverseBoolToVisibilityConverter}}">
                                <Button Background="Transparent" BorderThickness="0" Padding="0" Command="{Binding ToggleTodoListCommand}" Cursor="Hand" ToolTip="{Binding LocalizationService[Tooltip_ToggleMode]}">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <ContentPresenter />
                                        </ControlTemplate>
                                    </Button.Template>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Foreground="#F0FFFFFF" FontWeight="SemiBold" FontSize="14" VerticalAlignment="Center">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Text" Value="{Binding LocalizationService[MainWindow_Title_Memo]}" />
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsInTodoListMode}" Value="True">
                                                            <Setter Property="Text" Value="{Binding LocalizationService[MainWindow_Title_Todo]}" />
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                        <TextBlock FontSize="12" Foreground="#B0FFFFFF" Margin="8,0,0,0" VerticalAlignment="Center">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Text" Value="{Binding MemoCount, StringFormat=' ({0})'}" />
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsInTodoListMode}" Value="True">
                                                            <Setter Property="Text" Value="{Binding TodoListViewModel.IncompleteTodoCount, StringFormat=' ({0})'}" />
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </StackPanel>
                                </Button>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Visibility="{Binding IsEditMode, Converter={StaticResource BoolToVisibilityConverter}}">
                                <TextBlock Text="{Binding LocalizationService[MainWindow_Title_Edit]}" Foreground="#F0FFFFFF" FontWeight="SemiBold" FontSize="14" VerticalAlignment="Center" />
                            </StackPanel>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                            <StackPanel Orientation="Horizontal" Visibility="{Binding IsEditMode, Converter={StaticResource InverseBoolToVisibilityConverter}}">
                                <Button Width="32" Height="32" Margin="0,0,8,0" Command="{Binding TogglePinCommand}" Style="{StaticResource GlassButton}" ToolTip="{Binding LocalizationService[Tooltip_Pin]}">
                                    <Path Data="M16,12V4H17V2H7V4H8V12L6,14V16H11.2V22H12.8V16H18V14L16,12Z" Width="16" Height="16" Stretch="Uniform">
                                        <Path.Style>
                                            <Style TargetType="Path">
                                                <Setter Property="Fill" Value="#E0FFFFFF"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsWindowPinned}" Value="True">
                                                        <Setter Property="Fill" Value="#FFFFA500"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Path.Style>
                                    </Path>
                                </Button>
                                <Button Width="32" Height="32" Margin="0,0,8,0">
                                    <Button.Style>
                                        <Style TargetType="Button" BasedOn="{StaticResource GlassButton}">
                                            <Setter Property="Command" Value="{Binding CreateMemoCommand}" />
                                            <Setter Property="ToolTip" Value="{Binding LocalizationService[Button_New]}" />
                                            <Style.Triggers>
                                                <!-- Todo模式 + 输入区域可见: 显示"隐藏"提示 -->
                                                <MultiDataTrigger>
                                                    <MultiDataTrigger.Conditions>
                                                        <Condition Binding="{Binding IsInTodoListMode}" Value="True" />
                                                        <Condition Binding="{Binding TodoListViewModel.IsInputVisible}" Value="True" />
                                                    </MultiDataTrigger.Conditions>
                                                    <Setter Property="Command" Value="{Binding TodoListViewModel.ToggleInputCommand}" />
                                                    <Setter Property="ToolTip" Value="{Binding LocalizationService[Tooltip_HideTodoInput]}" />
                                                </MultiDataTrigger>
                                                <!-- Todo模式 + 输入区域隐藏: 显示"显示"提示 -->
                                                <MultiDataTrigger>
                                                    <MultiDataTrigger.Conditions>
                                                        <Condition Binding="{Binding IsInTodoListMode}" Value="True" />
                                                        <Condition Binding="{Binding TodoListViewModel.IsInputVisible}" Value="False" />
                                                    </MultiDataTrigger.Conditions>
                                                    <Setter Property="Command" Value="{Binding TodoListViewModel.ToggleInputCommand}" />
                                                    <Setter Property="ToolTip" Value="{Binding LocalizationService[Tooltip_ShowTodoInput]}" />
                                                </MultiDataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                    <Path Width="16" Height="16" Stretch="Uniform" Fill="#E0FFFFFF">
                                        <Path.Style>
                                            <Style TargetType="Path">
                                                <!-- 默认: 新建图标 (加号) -->
                                                <Setter Property="Data" Value="M19,13H13V19H11V13H5V11H11V5H13V11H19V13Z" />
                                                <Style.Triggers>
                                                    <!-- Todo模式 + 输入区域可见: 显示向上箭头 (折叠) -->
                                                    <MultiDataTrigger>
                                                        <MultiDataTrigger.Conditions>
                                                            <Condition Binding="{Binding IsInTodoListMode}" Value="True" />
                                                            <Condition Binding="{Binding TodoListViewModel.IsInputVisible}" Value="True" />
                                                        </MultiDataTrigger.Conditions>
                                                        <Setter Property="Data" Value="M7.41,15.41L12,10.83L16.59,15.41L18,14L12,8L6,14L7.41,15.41Z" />
                                                    </MultiDataTrigger>
                                                    <!-- Todo模式 + 输入区域隐藏: 显示向下箭头 (展开) -->
                                                    <MultiDataTrigger>
                                                        <MultiDataTrigger.Conditions>
                                                            <Condition Binding="{Binding IsInTodoListMode}" Value="True" />
                                                            <Condition Binding="{Binding TodoListViewModel.IsInputVisible}" Value="False" />
                                                        </MultiDataTrigger.Conditions>
                                                        <Setter Property="Data" Value="M7.41,8.58L12,13.17L16.59,8.58L18,10L12,16L6,10L7.41,8.58Z" />
                                                    </MultiDataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Path.Style>
                                    </Path>
                                </Button>
                                <Button Width="32" Height="32" Margin="0,0,8,0" Command="{Binding ToggleSettingsCommand}" Style="{StaticResource GlassButton}" ToolTip="{Binding LocalizationService[Button_Settings]}">
                                    <Path Data="M12,8A4,4 0 0,1 16,12A4,4 0 0,1 12,16A4,4 0 0,1 8,12A4,4 0 0,1 12,8M12,10A2,2 0 0,0 10,12A2,2 0 0,0 12,14A2,2 0 0,0 14,12A2,2 0 0,0 12,10M10,22C9.75,22 9.54,21.82 9.5,21.58L9.13,18.93C8.5,18.68 7.96,18.34 7.44,17.94L4.95,18.95C4.73,19.03 4.46,18.95 4.34,18.73L2.34,15.27C2.22,15.05 2.27,14.78 2.46,14.63L4.57,12.97C4.53,12.65 4.5,12.33 4.5,12C4.5,11.67 4.53,11.34 4.57,11.03L2.46,9.37C2.27,9.22 2.22,8.95 2.34,8.73L4.34,5.27C4.46,5.05 4.73,4.96 4.95,5.05L7.44,6.05C7.96,5.66 8.5,5.32 9.13,5.07L9.5,2.42C9.54,2.18 9.75,2 10,2H14C14.25,2 14.46,2.18 14.5,2.42L14.87,5.07C15.5,5.32 16.04,5.66 16.56,6.05L19.05,5.05C19.27,4.96 19.54,5.05 19.66,5.27L21.66,8.73C21.78,8.95 21.73,9.22 21.54,9.37L19.43,11.03C19.47,11.34 19.5,11.66 19.5,12C19.5,12.34 19.47,12.65 19.43,12.97L21.54,14.63C21.73,14.78 21.78,15.05 21.66,15.27L19.66,18.73C19.54,18.95 19.27,19.04 19.05,18.95L16.56,17.95C16.04,18.34 15.5,18.68 14.87,18.93L14.5,21.58C14.46,21.82 14.25,22 14,22H10" Fill="#E0FFFFFF" Width="16" Height="16" Stretch="Uniform" />
                                </Button>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Visibility="{Binding IsEditMode, Converter={StaticResource BoolToVisibilityConverter}}">
                                <Button Width="32" Height="32" Margin="0,0,8,0" Command="{Binding BackToListCommand}" Style="{StaticResource GlassButton}" ToolTip="{Binding LocalizationService[Tooltip_BackToList]}">
                                    <Path Data="M20,11V13H8L13.5,18.5L12.08,19.92L4.16,12L12.08,4.08L13.5,5.5L8,11H20Z" Fill="#E0FFFFFF" Width="16" Height="16" Stretch="Uniform" />
                                </Button>
                                <Button Width="32" Height="32" Margin="0,0,8,0" Command="{Binding SaveAndBackCommand}" Style="{StaticResource GlassButton}" ToolTip="{Binding LocalizationService[Tooltip_SaveAndBack]}">
                                    <Path Data="M15,9H5V5H15M12,19A3,3 0 0,1 9,16A3,3 0 0,1 12,13A3,3 0 0,1 15,16A3,3 0 0,1 12,19M17,3H5C3.89,3 3,3.9 3,5V19A2,2 0 0,0 5,21H19A2,2 0 0,0 21,19V7L17,3Z" Fill="#E0FFFFFF" Width="16" Height="16" Stretch="Uniform" />
                                </Button>
                                <Button Width="32" Height="32" Margin="0,0,8,0" Command="{Binding DeleteMemoCommand}" Style="{StaticResource GlassButton}" ToolTip="{Binding LocalizationService[Tooltip_Delete]}">
                                    <Path Data="M19,4H15.5L14.5,3H9.5L8.5,4H5V6H19M6,19A2,2 0 0,0 8,21H16A2,2 0 0,0 18,19V7H6V19Z" Fill="#FFE57373" Width="16" Height="16" Stretch="Uniform" />
