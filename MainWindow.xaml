                                          Fill="#E0FFFFFF" 
                                          Width="16" Height="16" 
                                          Stretch="Uniform"
                                          HorizontalAlignment="Center" 
                                          VerticalAlignment="Center"/>
                                </Button>
                                
                                <!-- 新建备忘录按钮 -->
                                <Button x:Name="MainAddMemoButton" 
                                        Width="32" Height="32" 
                                        Margin="0,0,8,0" 
                                        Click="MainAddMemoButton_Click" 
                                        ToolTip="新建备忘录"
                                        Style="{StaticResource GlassButton}">
