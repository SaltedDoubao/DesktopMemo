<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- 暗色主题颜色定义 -->
    
    <!-- 背景颜色 -->
    <SolidColorBrush x:Key="PrimaryBackgroundColor" Color="#1C1C1E"/>
    <SolidColorBrush x:Key="CardBackgroundColor" Color="#2C2C2E"/>
    <SolidColorBrush x:Key="SecondaryBackgroundColor" Color="#3A3A3C"/>
    <SolidColorBrush x:Key="InputBackgroundColor" Color="#2C2C2E"/>
    
    <!-- 文本颜色 -->
    <SolidColorBrush x:Key="PrimaryTextColor" Color="#F5F5F7"/>
    <SolidColorBrush x:Key="SecondaryTextColor" Color="#98989D"/>
    
    <!-- 边框颜色 -->
    <SolidColorBrush x:Key="PrimaryBorderColor" Color="#48484A"/>
    <SolidColorBrush x:Key="FocusBorderColor" Color="#007AFF"/>
    
    <!-- 按钮颜色 -->
    <SolidColorBrush x:Key="ButtonBackgroundColor" Color="#3A3A3C"/>
    <SolidColorBrush x:Key="ButtonBackgroundHoverColor" Color="#48484A"/>
    <SolidColorBrush x:Key="ButtonBackgroundPressedColor" Color="#58585A"/>
    <SolidColorBrush x:Key="ButtonForegroundColor" Color="#F5F5F7"/>
    
    <!-- 主色调（蓝色按钮等） -->
    <SolidColorBrush x:Key="AccentColor" Color="#007AFF"/>
    <SolidColorBrush x:Key="AccentHoverColor" Color="#0051D5"/>
    <SolidColorBrush x:Key="AccentPressedColor" Color="#004BB8"/>
    
    <!-- 下拉框/弹出框颜色 -->
    <SolidColorBrush x:Key="PopupBackgroundColor" Color="#2C2C2E"/>
    <SolidColorBrush x:Key="PopupBorderColor" Color="#48484A"/>
    <SolidColorBrush x:Key="ItemHighlightColor" Color="#3A3A3C"/>
    
    <!-- 图标颜色 -->
    <SolidColorBrush x:Key="IconColor" Color="#98989D"/>
    
</ResourceDictionary>

